<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="symfony\FlatCustomer" table="flat_customer">
    <indexes>
      <index name="fki_person_to_flat" columns="flat"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="SEQUENCE"/>
      <sequence-generator sequence-name="flat_customer_id_seq" allocation-size="1" initial-value="1"/>
    </id>
    <field name="name" type="text" column="name" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="surname" type="text" column="surname" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="adress" type="text" column="adress" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <many-to-one field="flat" target-entity="Flat" fetch="LAZY">
      <join-columns>
        <join-column name="flat" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
